@model Bertozzi.Mattia._5H.FormWeb.Models.Prenotazione

@{
    ViewData["Title"] = "Form di Prenotazione";
}

<h1>@ViewData["Title"]</h1>

<p>Compila il seguente Form</p>

<form class="m-2" method="post" asp-action="Prenota">

    <div class="form-group">
        <label asp-for="Nome">il tuo nome:</label>
        <input asp-for="Nome" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email">la tua Email:</label>
        <input asp-for="Email" class="form-control">
    </div>

	<button type="submit" class="btn btn-primary">Prenota</button>
</form>
